      <div class="form-container">
        <h2>LAPORAN KEGIATAN KKN</h2>

    
        
        <div class="form-group">
          <label for="namaKegiatan">Nama Kegiatan:</label>
          <input type="text" id="namaKegiatan" placeholder="" value="Kegiatan Sosial Masyarakat">
        </div>
        
        <div class="form-group">
          <label for="tanggal">Tanggal:</label>
          <input type="date" id="tanggal" value="2024-06-10">
        </div>
        
        <div class="form-group">
          <label for="jamMulai">Jam Mulai:</label>
          <input type="time" id="jamMulai" value="08:00">
        </div>
        
        <div class="form-group">
          <label for="jamSelesai">Jam Selesai:</label>
          <input type="time" id="jamSelesai" value="12:00">
        </div>
        
        <div class="form-group">
          <label for="kelompokKKN">Kelompok KKN:</label>
          <input type="number" id="kelompokKKN" value="6">
        </div>
        
        <div class="form-group">
          <label for="tempatKegiatan">Tempat Kegiatan:</label>
          <input type="text" id="tempatKegiatan" placeholder="" value="Lapangan Universitas">
        </div>
        
        <div class="form-group">
          <label for="isiKegiatan">Isi Kegiatan:</label>
          <textarea id="isiKegiatan" placeholder="">Kegiatan sosial masyarakat ini bertujuan untuk membantu masyarakat sekitar dalam membersihkan lingkungan dan meningkatkan kesadaran akan pentingnya menjaga kebersihan lingkungan.</textarea>
        </div>
        
        <script>
          // Fill in the form data using JavaScript
          document.getElementById("namaKegiatan").value = "Kegiatan Sosial Masyarakat";
          document.getElementById("tanggal").value = "2023-03-15";
          document.getElementById("jamMulai").value = "08:00";
          document.getElementById("jamSelesai").value = "12:00";
          document.getElementById("kelompokKKN").value = "5";
          document.getElementById("tempatKegiatan").value = "Lapangan Universitas";
          document.getElementById("isiKegiatan").value = "Kegiatan sosial masyarakat ini bertujuan untuk membantu masyarakat sekitar dalam membersihkan lingkungan dan meningkatkan kesadaran akan pentingnya menjaga kebersihan lingkungan.";
        </script>
        
          <button id="kirimButton">KIRIM</button>
          <div id="result"></div>
        
          <script>
            const kirimButton = document.getElementById('kirimButton');
            const resultDiv = document.getElementById('result');
            const formElements = document.querySelectorAll('.form-group input,.form-group textarea');
        
            kirimButton.addEventListener('click', () => {
            
              const formData = {};
              formElements.forEach((element) => {
                formData[element.id] = element.value;
              });
        
             
              resultDiv.innerHTML = 'Berhasil dikirim!';
              resultDiv.style.color = 'green';
        
              formElements.forEach((element) => {
                element.value = '';
              });
            });
          </script>
